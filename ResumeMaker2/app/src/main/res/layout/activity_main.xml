<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/r3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--    Title-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Resume"
        android:textSize="@dimen/_40ssp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/manu" />
                <!--    Name-->
                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:hint="Enter Your Full Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="@dimen/_20ssp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/email" />

                <!--    Email-->
                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_20ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/call" />

                <!--    Number-->
                <EditText
                    android:id="@+id/edtM_Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:hint="Enter Mobil Number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/_20ssp" />

            </LinearLayout>


            <!--    Birth Date-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Birth Date"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtBirthDD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:hint="DD"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/_20ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="/"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtBirthMM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:hint="MM"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/_20ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="/"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtBirthYY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:hint="YY"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/_20ssp" />
            </LinearLayout>

            <!--    Gander-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Gander"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:textSize="@dimen/_15ssp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female"
                    android:textSize="@dimen/_15ssp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Other"
                    android:textSize="@dimen/_15ssp" />
            </RadioGroup>

            <!--   Hobby-->

            <!--  Hobby Title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="* Hobby"
                android:textColor="#706E6E"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <!--        Chk Redding-->
                <CheckBox
                    android:id="@+id/chkRedding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="Redding"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <!--        Chk Journey-->
                <CheckBox
                    android:id="@+id/chkJourney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="Journey"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <!--        Chk Sports-->
                <CheckBox
                    android:id="@+id/chkSports"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="Sports"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--    Marital status-->
            <!--  Marital Title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="* Marital status"
                android:textColor="#706E6E"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/maGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!--        Married-->
                <RadioButton
                    android:id="@+id/rbMarried"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:text="Married"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <!--       Un-Married-->
                <RadioButton
                    android:id="@+id/rbUnMarried"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Un-Married"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

            </RadioGroup>


            <!--    Eduction info Title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="* Eduction Information"
                android:textColor="#706E6E"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

            <!--            Class Title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <!--                Class-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:text="Class"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />
                <!--                 Marks-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:text="Marks"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <!--                 Year-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:text="Year"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--            10 Marks & year-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20ssp"
                    android:layout_weight="1"
                    android:text="* 10th"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />
                <!--                10 Marks-->
                <EditText
                    android:id="@+id/edtMarks10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:hint="Marks"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="@dimen/_15sdp"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <!--                10 Year-->
                <EditText
                    android:id="@+id/edtYear10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:hint="Year"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="@dimen/_15sdp"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

            </LinearLayout>
            <!--            12 Marks & year-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:text="* 12th"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />
                <!--                12 Marks-->
                <EditText
                    android:id="@+id/edtMarks12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:hint="Marks"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="@dimen/_15sdp"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />


                <!--                12 Year-->
                <EditText
                    android:id="@+id/edtYear12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:hint="Year"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="@dimen/_15sdp"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

            </LinearLayout>


            <!--            Collage Marks & year-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:text="* Graduation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />
                <!--                Collage Marks-->
                <EditText
                    android:id="@+id/edtMarksBCA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:hint="Marks"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="@dimen/_15sdp"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <!--                Collage Year-->
                <EditText
                    android:id="@+id/edtYearBCA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:hint="Year"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="@dimen/_15sdp"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!--            Experience Title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="* Experience"
                android:textColor="#706E6E"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--                Experience job Name-->
                <EditText
                    android:id="@+id/edtExJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:hint="Job Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="@dimen/_20sdp"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <!--                Experience year-->
                <EditText
                    android:id="@+id/edtExYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:hint="Job Year"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:padding="@dimen/_20sdp"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--            Skill Title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="* Your Skill"
                android:textColor="#706E6E"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />
            <!--            Line-1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <!--        Chk Ms Office -->
                <CheckBox
                    android:id="@+id/chkC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Ms Office"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <!--        Chk Data Base-->
                <CheckBox
                    android:id="@+id/chkCpp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="Data Base"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />


            </LinearLayout>
            <!--        Chk Team leadership-->
            <CheckBox
                android:id="@+id/chkJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="Team leadership"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />
            <!--            Line-2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <!--        Chk Communication -->
                <CheckBox
                    android:id="@+id/chkHtml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Communication"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />



                <!--        Chk Networking-->
                <CheckBox
                    android:id="@+id/chkJavaScript"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Networking"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--        Chk Troubleshooting-->
            <CheckBox
                android:id="@+id/chkCss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="Troubleshooting"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />
            <!--            Line-3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <!--        Chk C# -->
                <CheckBox
                    android:id="@+id/chkChase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="C#"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <!--        Chk Python-->
                <CheckBox
                    android:id="@+id/chkPython"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Python"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <!--        Chk Kotlin-->
                <CheckBox
                    android:id="@+id/chkKotlin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Kotlin"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--            Line-4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <!--        Chk Android -->
                <CheckBox
                    android:id="@+id/chkAndroid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Android"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <!--        Chk Wab-->
                <CheckBox
                    android:id="@+id/chkWab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Wab"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <!--        Chk Flutter-->
                <CheckBox
                    android:id="@+id/chkFlutter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Flutter"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--            Submit & Clear-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <!--    Submit-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_20sdp"
                    android:text="Submit"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />
                <!--    Clear-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_20sdp"
                    android:text="Clear"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>