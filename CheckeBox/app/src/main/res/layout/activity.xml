<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#039BE5"
    tools:context=".Activity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#C0CA33"
        android:padding="20sp"
        android:text="Registration From"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="80sp"
        android:layout_marginBottom="10sp"
        android:hint="Enter Your Name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:textColor="#8E24AA"
        android:textColorHint="#F6F2F2" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp"
        android:hint="Enter Your Email"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:textColor="#8E24AA"
        android:textColorHint="#F6F2F2" />

    <EditText
        android:id="@+id/edtNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtEmail"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp"
        android:hint="Enter Your Mobil Number"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:textColor="#8E24AA"
        android:textColorHint="#F6F2F2" />

    <!--    Password & Confirm Password-->
    <LinearLayout
        android:id="@+id/linPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNumber"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp">

        <!--Password-->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_weight="1"
            android:hint="Enter  Password"
            android:imeOptions="actionNext"
            android:inputType="numberPassword"
            android:textColor="#8E24AA"
            android:textColorHint="#F6F2F2" />

        <!--    Confirm Password-->
        <EditText
            android:id="@+id/edtCPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_weight="1"
            android:hint="Confirm Password"
            android:imeOptions="actionDone"
            android:inputType="numberPassword"
            android:textColor="#8E24AA"
            android:textColorHint="#F6F2F2" />

    </LinearLayout>

    <!--    Check Box-->
    <LinearLayout
        android:id="@+id/linchk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linPass"
        android:layout_marginBottom="10sp">

        <!--        Check Box 1-->
        <CheckBox
            android:id="@+id/chkReading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reading"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!--        Check Box 2-->
        <CheckBox
            android:id="@+id/chkWriting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Writing"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!--        Check Box 3-->
        <CheckBox
            android:id="@+id/chkSinging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Singing"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linchk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#43A047"
        android:text="Submit"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#BDBABA"
        android:text="Clear"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>