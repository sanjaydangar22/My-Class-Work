<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SimpleDialogActivity">
    <!--    Alert-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/teal_200"
        android:padding="10dp"
        android:text="Alert Button"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--    Save-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="#6CC2EC"
        android:padding="10dp"
        android:text="Save Button"
        android:textSize="20sp"
        android:textStyle="bold" />
    <!--    Update-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="#D388F3"
        android:padding="10dp"
        android:text="Update Button"
        android:textSize="20sp"
        android:textStyle="bold" />
    <!--    Progress-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="#F3B25F"
        android:padding="10dp"
        android:text="Progress Button"
        android:textSize="20sp"
        android:textStyle="bold" />
    <!--    Select-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="#FDD835"
        android:padding="10dp"
        android:text="Select Button"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>